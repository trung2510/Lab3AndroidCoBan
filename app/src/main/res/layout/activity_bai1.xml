<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="16dp"
    tools:context=".Bai1Activity">

    <TextView
        android:textColor="#FFA200"
        android:gravity="center_horizontal"
        android:textSize="26sp"
        android:textStyle="bold"
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:text="ĐĂNG NHẬP HỆ THỐNG"
        android:layout_height="wrap_content" />
    <TextView
        android:textColor="#FFA200"
        android:layout_margin="16dp"
        android:id="@+id/tv_user_name"
        android:layout_below="@+id/title"
        android:layout_width="wrap_content"
        android:text="UserName"
        android:layout_height="wrap_content" />
    <TextView
        android:textColor="#FFA200"
        android:layout_margin="16dp"
        android:id="@+id/tv_password"
        android:layout_below="@+id/tv_user_name"
        android:layout_width="wrap_content"
        android:text="Password"
        android:layout_height="wrap_content" />
    <EditText
        android:backgroundTint="#FF8C00"
        android:layout_width="match_parent"
        android:id="@+id/edt_user_name"
        android:layout_below="@+id/title"
        android:layout_toRightOf="@+id/tv_user_name"
        android:layout_height="wrap_content" />
    <EditText
        android:backgroundTint="#FF8C00"
        android:inputType="textPassword"
        android:id="@+id/edt_passworđ"
        android:layout_width="match_parent"
        android:layout_below="@+id/edt_user_name"
        android:layout_toRightOf="@+id/tv_user_name"
        android:layout_height="wrap_content" />
    <Button
        android:layout_margin="16dp"
        android:id="@+id/btn_dang_nhap"
        android:layout_below="@+id/edt_passworđ"
        android:layout_width="wrap_content"
        android:onClick="DangNhap"
        android:layout_toRightOf="@id/tv_password"
        android:text="ĐĂNG NHẬP"
        android:layout_height="wrap_content" />


</RelativeLayout>